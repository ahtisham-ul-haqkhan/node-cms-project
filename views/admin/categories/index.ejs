<div id="admin-content">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1 class="admin-heading"><i class="fa fa-gears"></i> All Categories</h1>
            </div>
            <div class="col-md-2">
                <a class="add-new" href="/admin/add-category">add category</a>
            </div>
            <div class="col-md-12">
                <table class="content-table">
                    <!-- <%= categories%> -->
                    <thead>
                        <th>S.No.</th>
                        <th>Category Name</th>
                        <th>Slug</th>
                        <th>Description</th>
                        <th>Action</th>
                    </thead>
                    <tbody>
                        <% categories.map((category, index) => { %>
                        <tr>
                            <td class='id'><%= index + 1%></td>
                            <td><%= category.name %></td>
                            <td><%= category.slug %></td>
                            <td><%= category.description %></td>
                            <td class='edit'>
                                <a href='update-category.html'><i class='fa fa-edit'></i></a>
                                <a href="/admin/delete-category/<%= category._id %>"><i class='fa fa-trash-o'></i></a>
                            </td>
                        </tr>
                        <% }) %>
                    
                    </tbody>
                </table>
                <nav>
                    <ul class="pagination">
                      <li class="page-item disabled">
                        <a class="page-link">Previous</a>
                      </li>
                      <li class="page-item"><a class="page-link" href="#">1</a></li>
                      <li class="page-item active">
                        <a class="page-link" href="#" aria-current="page">2</a>
                      </li>
                      <li class="page-item"><a class="page-link" href="#">3</a></li>
                      <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                      </li>
                    </ul>
                  </nav>
            </div>
        </div>
    </div>
</div>