<div id="admin-content">
    <div class="container">
      <div class="row">
          <div class="col-md-12">
            <h1 class="adin-heading"> Update Category</h1>
          </div>
          <div class="col-md-6 mx-auto">
            <!-- <%= category %> -->
              <div class="card">
                <h5 class="card-header">Update Category</h5>
                <div class="card-body">
                  <!-- Form Start -->
                  <form action="/admin/update-category/<%= category._id %>" method="POST" autocomplete="off">
                    <div class="mb-3">
                      <label for="" class="form-label">Category Name</label>
                      <input type="text" name="name" class="form-control" placeholder="Category Name" value="<%= category.name %>">
                    </div>
                    <div class="mb-3">
                      <label for="" class="form-label">Description</label>
                      <textarea name="description" class="form-control"><%= category.description %></textarea>
                    </div>
                    <input type="submit" name="save" class="btn btn-primary" value="Update" required />
                  </form>
                   <!--  Error Message-->
                   <%- include('../partials/error')%>
                  </div>
                  <!-- /Form End -->
                </div>
              </div>
          </div>
      </div>
    </div>
  </div>