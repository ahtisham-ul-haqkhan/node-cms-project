   <% news.forEach((news, index) => { %>

              <div class="post-content">
                  <div class="row">
                    <div class="col-md-4">
                      <a class="post-img" href="/single/<%= news._id %>"><img src="/uploads/<%= news.image %>" alt=""/></a>
                    </div>
                    <div class="col-md-8">
                      <div class="inner-content clearfix">
                          <h3><a href="/single/<%= news._id %>"><%= news.title %></a></h3>
                          <div class="post-information">
                            <span>
                              <i class="fa fa-tags" aria-hidden="true"></i>
                              <a href='/category/<%= news.category.slug %>'><%= news.category.name %></a>
                            </span>
                            <span>
                              <i class="fa fa-user" aria-hidden="true"></i>
                              <a href='/author/<%= news.author._id %>'><%= news.author.fullname %></a>
                            </span>
                            <span>
                              <i class="fa fa-calendar" aria-hidden="true"></i>
                              <%= news.createdAt.toLocaleDateString('en-US', {
                                year: 'numeric',
                                day: 'numeric',
                                month: 'long'
                              }) %>
                              <!-- 01 Nov, 2025 -->
                            </span>
                          </div>
                          <p class="description">
                              <%= news.content.substring(0, 20) + '...' %>
                          </p>
                          <a class='read-more pull-right' href="/single/<%= news._id %>">read more</a>
                      </div>
                    </div>
                  </div>
              </div>
            <% })%>
           
              <nav>
                <ul class="pagination">
                  <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item active">
                    <a class="page-link" href="#" aria-current="page">2</a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                  </li>
                </ul>
              </nav>